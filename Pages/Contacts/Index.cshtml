@page
@model SimplePhoneBookApp.Pages.Contacts.IndexModel
@{
ViewData["Title"] = "Contacts List";
}

<h1>Contacts List</h1>

<a asp-page="Create" class="btn btn-primary">Add New Contact</a>

<input type="text" id="searchInput" placeholder="Search Contacts..." autocomplete="off" class="form-control mb-3">

<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Email</th>
        <th>Tag</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody id="contactsTableBody">
    @foreach (var contact in Model.Contacts)
    {
    <tr>
        <td>@contact.Name</td>
        <td>@contact.PhoneNumber</td>
        <td>@contact.Email</td>
        <td>@contact.Tag</td>
        <td>
            <a asp-page="Edit" asp-route-id="@contact.Id" class="btn btn-warning">Edit</a>
            <a asp-page="Delete" asp-route-id="@contact.Id" class="btn btn-danger">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>

<script src="~/js/search.js"></script>

<!-- Inline Script for Initializing Contacts Array -->
<script>
    let initialContacts = @Html.Raw(Json.Serialize(Model.Contacts));
</script>
