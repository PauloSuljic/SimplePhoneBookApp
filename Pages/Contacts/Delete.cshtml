@page "{id:int}"
@model SimplePhoneBookApp.Pages.Contacts.DeleteModel
@{
ViewData["Title"] = "Delete Contact";
}

<h1>Delete Contact</h1>

<div>
    <h3>Are you sure you want to delete this contact?</h3>
    <div>
        <h4>@Model.Contact.Name</h4>
        <p>Phone: @Model.Contact.PhoneNumber</p>
        <p>Email: @Model.Contact.Email</p>
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Contact.Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
